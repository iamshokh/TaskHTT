@model IEnumerable<TaskHTT.DataLayer.EfClasses.Category>
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Category/Create">Add Category</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Categories</h3>

            <table  class="table table-stripped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Title</th>
                        <th>Created Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model){
                    <tr>
                        
                        <td>@item.Id</td>
                        <td>@item.CategoryName</td>
                        <td>@item.Title</td>
                        <td>@item.CreatedDate</td>
                        <td>
                                <a class="btn btn-success" href="/Genre/Update?id=@item.Id"><i class="bi bi-pen"></i> Edit</a> |
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Genre/Delete?id=@item.Id"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

