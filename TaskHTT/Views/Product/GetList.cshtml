@model List<TaskHTT.DataLayer.EfClasses.Product>
@{
}

<div class="container pt-3">
    @*<div class="row">
        <div class="col-md-12">
        <a class="btn btn-dark" href="/Product/Create">+ Add Product</a>
        </div>
        </div>*@

    <div class="row">
        <div class="col-md-6">
            <!-- 6 columns for the "+ Add Product" button -->
            <a class="btn btn-dark" href="/Product/Create">+ Add Product</a>
        </div>
        <div class="col-md-6">
            <!-- 6 columns for the search input and dropdown -->
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search Product">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="button">Search</button>
                </div>
            </div>
            <div class="form-group mt-2">
                <select class="form-control">
                    <option value="">All Categories</option>
                    @foreach (var category in Model)
                    {
                        <option value="@category.Id">@category.Category.CategoryName</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h3>Products</h3>

            <table class="table table-stripped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Product Name</th>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Created Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.ProductName</td>
                            <td>@item.Title</td>
                            <td>@item.Category.CategoryName</td>
                            <td>@item.CreatedDate</td>
                            <td>
                                <a class="btn btn-success" href="/Product/Update?id=@item.Id"><i class="bi bi-pen"></i> Edit</a> |
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Product/Delete?id=@item.Id"><i class="bi bi-trash"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

